{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "independent": true,
  "version": "independent",
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "allowBranch": ["main", "monorepo", "pub"],
      "message": "chore(release): publish"
    }
  }
}
